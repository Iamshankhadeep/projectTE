<%- include("partials/header") %>
<%= worker.WRKRNAME %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add Daily Attendance</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/dailyentry/<%=worker._id%>" method="POST">
        <div class="form-group">
          <select class="selectpicker" data-style="btn-info" name="kamjharicode">
            <option value="">Select Kamjhari Code</option>
            <%for(const onekamjhari of kamjhari){%>
            <option value="<%=onekamjhari.kamjharicode%>"><%=onekamjhari.kamjharicode+' '+onekamjhari.description%>
            </option>
            <%}%>
          </select>
        </div>
        <div class="form-group">
            <input type="date" id="date" name="date" value=<%= date %>>
        </div>
        <div class="form-group">
          <input type="number" id="todayTargetPluckingTeaLeaves" name="todayTargetPluckingTeaLeaves"
            value=<%= plucking.todayTargetPluckingTeaLeaves %>>
        </div>
        <div class="form-group">
          <button class="btn btn-default btn-lg btn-primary">Submit</button>
        </div>
      </form>
      <a href="/dailyentry">Go Back</a>
    </div>
  </div>
</div>
<%- include("partials/footer") %>