<%- include("partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new CampGround</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Enter a name for the campground">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="imageUrl" placeholder="Enter a image Url">
        </div>
        <div class="form-group">
          <button class="btn btn-default btn-lg btn-primary">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%- include("partials/footer") %>